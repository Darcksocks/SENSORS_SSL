/* Includes */
#include "stm32f4xx.h"
#include "stm32f4_discovery.h"
#include "stm32f4xx_gpio.h"
#include "stm32f4xx_rcc.h"
#include "stm32f4xx_spi.h"
#include "serial.h"

/* Private macro */
/* Private variables */
/* Private function prototypes */
/* Private functions */

/**
 **===========================================================================
 **
 **  Abstract: main program
 **
 **===========================================================================
 */
int main(void)
{
	int i = 0;
	serial_init(9600);
	serial_puts("test1\r\n");

	/*initialisation variables */
	uint8_t BUSY_OPTIC;
	long long delay;
	volatile uint16_t data_optical;
	uint8_t boucle;

	STM_EVAL_LEDInit(LED3);
	STM_EVAL_LEDInit(LED4);
	STM_EVAL_LEDInit(LED5);
	STM_EVAL_LEDInit(LED6);

	/*Initialisation de la spi et des broches en sortie et mets le CS à 1*/
	init_clock_spi();
	init_spi_Optical();
	Config_Optical();
	GPIO_SetBits(GPIOB, GPIO_Pin_1);

	/*initialisation liaison serie */
	serial_init(9600);
	for(delay=0;delay<0xFF;delay++);
	serial_puts("initialisation faite\r\n");

	/*active la communication spi*/
	SPI_ENABLE_Optical();

	/*raz les flags de la spi*/
	SPI_CLEAR_BUSY();

	STM_EVAL_LEDOn(LED3);

	for(boucle=0;boucle <= 0x000F;boucle++)
	{
		SPI_CLEAR_BUSY();
		serial_puts("RAZ flags\r\n");
		SPI_BUSY_Optical(BUSY_OPTIC);
		if(BUSY_OPTIC == 0)
		{
			GPIO_ResetBits(GPIOB, GPIO_Pin_1);
			STM_EVAL_LEDOn(LED4);
			STM_EVAL_LEDOn(LED5);
			for(delay=0 ; delay<=0x0F; delay++);
			STM_EVAL_LEDOn(LED3);
			SPI_I2S_SendData(SPI1, 0x0A00);
			SPI_RECEIVEDATA_Optical(data_optical);
			serial_putchar(data_optical);
			serial_puts("\r\n");
			GPIO_SetBits(GPIOB, GPIO_Pin_1);
			/*if(id == 33)
  			{
  				STM_EVAL_LEDOff(LED3);
  				serial_puts("found\r\n");
  			}
  			else
  			{
  				STM_EVAL_LEDOff(LED4);
  				serial_puts(id);
  				serial_puts("not found\r\n");
  			}*/
  			/*SPI_RECEIVEDATA_Optical(data_optical);
  			serial_putchar(data_optical+10);
  			SPI_CLEAR_BUSY_OPTIC();*/
			/*test si la liaison est bonne puis configure le CS à 0 pour
			 * selectionner l'esclave. realiser une attente pour etre sur que
			 * l'esclave est bien selectionné puis lance la procédure de
			 * reception
			 * une fois fini, remet les flags à leur etat par défaut (reset)
			 */
		}
		else
		{
			for(delay=0;delay<10000;delay++);
			/*si la liaion n'est pas prete, alors attend*/
		}
	}


	/**
	 *  IMPORTANT NOTE!
	 *  The symbol VECT_TAB_SRAM needs to be defined when building the project
	 *  if code has been located to RAM and interrupts are used.
	 *  Otherwise the interrupt table located in flash will be used.
	 *  See also the <system_*.c> file and how the SystemInit() function updates
	 *  SCB->VTOR register.
	 *  E.g.  SCB->VTOR = 0x20000000;
	 */

	/* TODO - Add your application code here */



	/* Infinite loop */
	while (1)
	{
		i++;
	}
}


